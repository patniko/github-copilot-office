{
  "name": "GitHub Copilot Office Add-In",
  "version": "1.0.0",
  "description": "Add GitHub Copilot add-in to Office, Word and PowerPoint applications.",
  "main": "src/tray/main.js",
  "scripts": {
    "dev": "node src/server.js",
    "start": "node src/server-prod.js",
    "start:tray": "electron .",
    "build": "vite build",
    "build:icons": "node scripts/generate-icons.js",
    "build:installer": "npm run build && npm run build:macos && npm run build:windows",
    "build:macos": "./installer/macos/build.sh",
    "build:windows": "powershell -ExecutionPolicy Bypass -File installer/windows/build.ps1",
    "build:electron": "npm run clean:extraneous && npm run build && electron-builder",
    "build:electron:win": "npm run clean:extraneous && npm run build && electron-builder --win",
    "build:electron:mac": "npm run clean:extraneous && npm run build && electron-builder --mac",
    "clean:extraneous": "node scripts/clean-extraneous.js"
  },
  "pkg": {
    "assets": [],
    "scripts": [
      "src/copilotProxy.js"
    ],
    "outputPath": "build"
  },
  "build": {
    "appId": "com.github.copilot-office-addin",
    "productName": "GitHub Copilot Office Add-in",
    "directories": {
      "output": "build/electron"
    },
    "files": [
      "src/tray/**/*",
      "src/server-prod.js",
      "src/copilotProxy.js",
      "node_modules/**/*",
      "!node_modules/**/node_modules/**",
      "!node_modules/office-addin-*/**",
      "!node_modules/npm-*/**",
      "!node_modules/read-package-json-fast/**"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      },
      {
        "from": "certs",
        "to": "certs"
      },
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "manifest-prod.xml",
        "to": "manifest.xml"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/tray-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/tray-icon.ico",
      "uninstallerIcon": "assets/tray-icon.ico",
      "include": "installer/windows/nsis-scripts.nsh"
    },
    "mac": {
      "target": "dmg",
      "icon": "installer/macos/icon.icns",
      "category": "public.app-category.productivity",
      "extendInfo": {
        "LSUIElement": true
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/office-js": "^1.0.561",
    "@types/office-runtime": "^1.0.35",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@yao-pkg/pkg": "^6.11.0",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "html-webpack-plugin": "^5.6.5",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-plugin-html": "^3.2.2",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.72.7",
    "@fluentui/react-icons": "^2.0.315",
    "@github/copilot": "^0.0.367",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "pptxgenjs": "^4.0.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "turndown": "^7.2.2",
    "vscode-jsonrpc": "^8.2.1",
    "ws": "^8.18.3"
  }
}
